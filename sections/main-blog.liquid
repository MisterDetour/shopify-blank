{%- paginate blog.articles by 6 -%}
  <h1>{{ blog.title }}</h1>

  <div class="grid-3">
    {%- for article in blog.articles -%}
      <div>
        <h2>
          <a href="{{ article.handle }}">{{ article.title }}</a>
        </h2>
      </div>
    {%- endfor -%}
  </div>

  {%- if paginate.pages > 1 -%}
    {%- render 'pagination', paginate: paginate -%}
  {%- endif -%}
{%- endpaginate -%}
